@require '../colors.styl'

#ctl00 > center
    padding 1rem !important

.documents-container
    display flex
    flex-direction column
    gap 1.5rem
    max-width 100%
    margin 0 auto
    font-family 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important

.category-container
    border 1px solid $neutral-200
    border-radius 12px
    overflow hidden
    background white

.category-header
    background white
    border-bottom 1px solid $neutral-200
    padding 1rem 1.25rem
    font-weight 600
    color $slate-900
    font-size 1.05rem

.category-actions
    display flex
    align-items center
    gap 0.5rem

.documents-page-title
    display flex
    align-items center
    justify-content space-between
    gap 0.75rem
    flex-wrap wrap

.documents-toolbar
    display flex
    justify-content flex-end
    align-items center
    gap 0.5rem
    padding 0 1rem
    margin-bottom 0.75rem

.documents-toolbar-inline
    display inline-flex
    align-items center
    gap 0.5rem
    margin-left auto

.category-read-all,
.documents-read-all
    display inline-flex
    align-items center
    gap 0.35rem
    padding 0.35rem 0.85rem
    border-radius 9999px
    font-size 0.75rem
    font-weight 600
    border 1px solid rgba(148, 163, 184, 0.35)
    background white
    color $slate-600
    cursor pointer
    transition background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease

.category-read-all.is-active,
.documents-read-all.is-active
    border-color rgba(239, 68, 68, 0.35)
    background rgba(239, 68, 68, 0.08)
    color #ef4444

.category-read-all.is-active:hover,
.documents-read-all.is-active:hover
    background rgba(239, 68, 68, 0.16)

.category-read-all:disabled,
.documents-read-all:disabled
    cursor default
    color $neutral-500
    border-color rgba(148, 163, 184, 0.25)
    background $neutral-100

.documents-grid
    display grid
    grid-template-columns repeat(auto-fill, minmax(260px, 1fr))
    gap 1rem
    padding 1rem
    background $neutral-50


.doc-unread-indicator
    position absolute
    top 0.75rem
    right 0.75rem
    display flex
    align-items center
    gap 0.35rem
    font-size 0.7rem
    font-weight 600
    color #ef4444
    letter-spacing 0.02em
    line-height 1
    white-space nowrap

.doc-unread-dot
    width 0.5rem
    height 0.5rem
    border-radius 50%
    background #ef4444




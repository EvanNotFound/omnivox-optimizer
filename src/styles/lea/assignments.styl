@require '../colors.styl'

.assignments-page
    max-width 100%
    margin 0 auto
    width 100%

.page-header
    display flex
    flex-direction column
    align-items flex-start
    text-align left
    margin-bottom 1.5rem

.assignments-container
    display flex !important
    flex-direction column
    gap 1.5rem

.category-container
    background white
    border 1px solid $neutral-200
    border-radius 12px
    overflow hidden

.category-header
    display flex
    align-items center
    padding 1.25rem 1.5rem
    font-size 1.05rem
    font-weight 600
    color $slate-900
    border-bottom 1px solid $neutral-200
    background $slate-50

.assignments-grid
    display grid
    grid-template-columns repeat(auto-fill, minmax(260px, 1fr))
    gap 1rem
    padding 1.25rem
    background $neutral-50

.assignment-card
    display flex
    flex-direction column
    gap 0.75rem
    background white
    border-radius 12px
    border 1px solid $neutral-200
    padding 1.25rem
    transition border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease
    cursor pointer

    &:hover
        transform translateY(-2px)
        border-color $neutral-300
        box-shadow 0 4px 12px rgba(15, 23, 42, 0.08)

    &.unread
        border-color $blue-300

    &.submitted
        border-color $emerald-300

.assignment-header
    display flex
    flex-direction column
    gap 0.75rem

.assignment-title-row
    display flex
    flex-direction row
    justify-content space-between
    width 100%
    align-items center
    gap 0.75rem
    flex 1

.assignment-title
    font-size 1.1rem
    font-weight 600
    color $slate-900
    text-decoration none
    line-height 1.05
    text-align left
    
    &:hover
        color $blue-600

.due-date
    display flex
    align-items center
    gap 0.5rem
    background-color white
    padding 0.5rem 0.75rem
    border-radius 10px
    font-size 0.9rem
    color $slate-700
    border 1px solid $slate-200
    box-shadow 0 1px 2px rgba(15, 23, 42, 0.05)

    &.overdue
        background-color $red-50
        color $red-700
        border-color $red-200

    .due-label
        color $slate-500
        font-weight 500

    .date
        font-weight 500
        color $slate-800

    .relative-date-badge
        background-color $emerald-50
        color $emerald-700
        font-size 0.7rem
        font-weight 600
        padding 0.25rem 0.6rem
        border-radius 999px
        margin-left auto
        white-space nowrap

.assignment-details
    display flex
    flex-direction column
    gap 0.75rem
    font-size 0.9rem

    .label
        color $slate-500
        margin-right 0.5rem

    .status
        &.submitted
            color $green-600

.submission-info, .status-info
    display flex
    align-items center

.status-info
    flex-direction column
    align-items flex-start
    gap 0.25rem

    .label
        margin-right 0
    
    .status
        display block
        text-align left
        width 100%

.status-indicators
    display flex
    align-items center
    gap 0.5rem

.indicator
    display flex
    align-items center
    justify-content center
    width 28px
    height 28px
    border-radius 50%
    background $neutral-100
    color $slate-500
    transition background-color 0.2s ease, color 0.2s ease, transform 0.2s ease

    svg
        width 16px
        height 16px
        fill none !important

    &:hover
        background $neutral-200
        color $slate-700
        transform translateY(-1px)

    &.new-indicator
        color $blue-600
        background $blue-100

    &.submitted-indicator
        color $emerald-600
        background $emerald-100

    &.overdue-indicator
        color $red-600
        background $red-100

// Override any display:none that might be affecting the assignments table
table[id*="ListeTrav"]
    display table !important
